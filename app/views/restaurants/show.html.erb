<div class="container">
  <table>
    <tbody>
        <tr>
            <td> Name: </td>
            <td><%= @restaurant.name %></td>
        </tr>
        <tr>
            <td>Address:</td>
            <td><%= @restaurant.address %></td>
        </tr>
        <tr>
            <td> City: </td>
            <td><%= @restaurant.city %></td>
        </tr>
        <tr>
            <td> State: </td>
            <td><%= @restaurant.state %></td>
        </tr>
        <tr>
            <td>Zip:</td>
            <td><%= @restaurant.zip %></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td>
              <% if @restaurant.description %>
                  <%= @restaurant.description %>
              <% end %>
          </td>
        </tr>
        <tr>
            <td> Categories: </td>
            <% if @categories %>
              <td>
                <% @categories.each do |category| %>
                  <%=link_to category.name, category_path(category) %>
                <% end %>
              </td>
            <% else %>
              <p> This restaurant does not have any type assigned yet</p>
            <% end %>
        </tr>
    </tbody>
  </table>


<div class="container">
  <%= link_to "Add a Review", new_restaurant_review_path(@restaurant), slass:'button', method: :get %>
</div>

<div class="container">
  <h5> Reviews: </h5>
  <% if !@reviews.empty? %>
      <% @reviews.each do |review| %>
        <div>
          <p>created on: <%= review.created_at.strftime("%B %d %Y") %></p>
          <p>rating: <%= review.rating %></p>
          <p>review: <%= review.body %></p>
        </div>
      <% end %>
  <% end %>
</div>
